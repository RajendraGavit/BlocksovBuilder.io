# Universal Digital Sovereignty Platform (UDSP) Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://admin:password123@mongodb:27017/udsp?authSource=admin
REDIS_URL=redis://:redis123@redis:6379

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Ethereum Mainnet/Testnet RPC URLs
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Polygon Network RPC URLs
POLYGON_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY
POLYGON_MAINNET_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY

# Solana RPC URLs
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# Private key for blockchain transactions (NEVER commit to version control)
PRIVATE_KEY=your_private_key_here

# Smart contract addresses (deployed contract addresses)
DID_REGISTRY_CONTRACT_ADDRESS=0x...
CREDENTIAL_REGISTRY_CONTRACT_ADDRESS=0x...

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption keys (must be 32 characters for AES-256)
ENCRYPTION_KEY=your-32-char-encryption-key-here!!
API_ENCRYPTION_KEY=another-32-char-key-for-api-here

# Session configuration
SESSION_SECRET=your-session-secret-key-here
COOKIE_SECRET=your-cookie-secret-key-here

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# OpenAI API (for AI compliance service)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Pinata IPFS (for credential storage)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# SendGrid (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=0.0.0.0

# Microservice ports
IDENTITY_SERVICE_PORT=3001
AUTH_SERVICE_PORT=3002
CREDENTIAL_SERVICE_PORT=3003
BLOCKCHAIN_ADAPTER_PORT=3004
COMPLIANCE_SERVICE_PORT=3005

# Frontend
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_WS_URL=ws://localhost:8080
REACT_APP_ENVIRONMENT=development

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
PYTHON_ENV=development

# Health check endpoints
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database (separate from development)
TEST_MONGODB_URI=mongodb://admin:password123@mongodb:27017/udsp_test?authSource=admin
TEST_REDIS_URL=redis://:redis123@redis:6379/1

# Test blockchain configuration
TEST_PRIVATE_KEY=your_test_private_key_here
TEST_ETHEREUM_RPC_URL=http://localhost:8545

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Auto-reload and development features
DEV_AUTO_RELOAD=true
DEV_SHOW_STACK_TRACES=true
DEV_MOCK_BLOCKCHAIN=false

# =============================================================================
# PRODUCTION OVERRIDES (Only in production)
# =============================================================================
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# CLUSTER_MODE=true
# CLUSTER_WORKERS=4
