{
  "name": "udsp-platform",
  "version": "1.0.0",
  "description": "Universal Digital Sovereignty Platform - Production-grade blockchain identity management",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend",
    "shared"
  ],
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:detached": "docker-compose up -d --build",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v --remove-orphans",
    "logs": "docker-compose logs -f",
    "install:all": "pnpm install",
    "build:all": "pnpm -r build",
    "test:all": "pnpm -r test",
    "lint:all": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "health": "curl -f http://localhost:8080/health || exit 1",
    "db:migrate": "pnpm --filter=@udsp/identity-service db:migrate",
    "db:seed": "pnpm --filter=@udsp/identity-service db:seed",
    "contracts:compile": "cd contracts && npx hardhat compile",
    "contracts:deploy": "cd contracts && npx hardhat run scripts/deploy.js",
    "contracts:test": "cd contracts && npx hardhat test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/udsp-platform.git"
  },
  "keywords": [
    "blockchain",
    "identity",
    "decentralized",
    "self-sovereign",
    "credentials",
    "microservices",
    "ethereum",
    "polygon",
    "solana",
    "zero-knowledge",
    "privacy",
    "web3",
    "did",
    "verifiable-credentials"
  ],
  "author": "UDSP Team",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "semver": "^7.5.0",
      "tough-cookie": "^4.1.3"
    }
  }
}